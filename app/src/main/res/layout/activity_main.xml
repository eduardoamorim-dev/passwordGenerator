<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gerador de Senhas"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tamanho da senha:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/seekBarLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="50"
        android:progress="12"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12 caracteres"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opcoes:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/cbUppercase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Letras maiusculas"
        android:checked="true"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cbLowercase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Letras minusculas"
        android:checked="true"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cbNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numeros"
        android:checked="true"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cbSymbols"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simbolos"
        android:checked="false"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="GERAR SENHA"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#0099FF"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senha gerada:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clique em GERAR SENHA para comecar"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="#F0F0F0"
        android:padding="16dp"
        android:textIsSelectable="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnCopy"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="COPIAR SENHA"
        android:textSize="14sp"
        android:backgroundTint="#00CC66"
        android:textColor="#FFFFFF"
        android:enabled="false" />

</LinearLayout>